{
  "name": "One-click Screenshot",
  "version": "0.0.1",
  "description": "Take screenshots of entire websites.",
  "homepage_url": "https://stefansundin.github.io/one-click-screenshot/",
  "author": "Stefan Sundin",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [ "js/background.js" ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "One-click Screenshot",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "js/content_script.js"
  ],
  "manifest_version": 2
}
